<mvc:View controllerName="com.gavdilabs.ui5template.controller.CandidateOverview" displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout">
	<f:FlexibleColumnLayout id="flcDocMetadataTypes" backgroundDesign="Translucent" layout="TwoColumnsMidExpanded">
		<f:beginColumnPages>
			<f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
				<!-- DynamicPage Title -->
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<Title text="Candidate Overview"/>
						</f:heading>
					</f:DynamicPageTitle>
				</f:title>

				<!-- DynamicPage Content -->
				<f:content>
					<Table id="candidateTable" mode="SingleSelectMaster" itemPress=".onListItemPress" items="{path: '/Candidates'}" class="sapFDynamicPageAlignContent" width="auto">
						<headerToolbar>
							<OverflowToolbar>
								<ToolbarSpacer/>
								<SearchField search="onSearch" width="17.5rem"/>
								<OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column width="12em">
								<Text text="Name" />
							</Column>
							<Column hAlign="End">
								<Text text="Position" />
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation">
								<cells>
									<ObjectIdentifier title="{firstName} {lastName}" />
									<ObjectIdentifier title="{onBoarding}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</f:content>

				<!-- DynamicPage Footer -->
				<f:footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" text="Accept"/>
						<Button type="Reject" text="Reject"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</f:beginColumnPages>
		<f:midColumnPages>
			<f:DynamicPage id="dynamicPageId2" showFooter="true">
				<!-- DynamicPage Title -->
				<f:title>
					<f:DynamicPageTitle>
						<f:heading>
							<HBox>
								<Avatar src="" class="sapUiTinyMarginEnd"/>
								<Title text="Add name here"/>
							</HBox>
						</f:heading>

						<f:expandedContent>
							<Label text="Position"/>
						</f:expandedContent>
						<f:snappedContent>
							<Label text="Position"/>
						</f:snappedContent>
						<f:snappedTitleOnMobile>
							<Title text="Position"/>
						</f:snappedTitleOnMobile>

						<f:navigationActions>
							<Button icon="sap-icon://full-screen" type="Transparent" />
							<Button icon="sap-icon://decline" type="Transparent" />
						</f:navigationActions>
					</f:DynamicPageTitle>
				</f:title>

				<f:header>
					<f:DynamicPageHeader pinnable="true">
						<layout:HorizontalLayout allowWrapping="true">
							<layout:VerticalLayout class="sapUiMediumMarginEnd">
								<ObjectAttribute title="Email" text="Warehouse A"/>
								<ObjectAttribute title="Phone" text="23L"/>
							</layout:VerticalLayout>

							<layout:VerticalLayout>
								<ObjectAttribute title="Adress" text="34"/>
								<ObjectAttribute title="Start Date" text="34"/>
							</layout:VerticalLayout>
						</layout:HorizontalLayout>
					</f:DynamicPageHeader>
				</f:header>
				<!-- DynamicPage Content -->
				<f:content>
					<Text text="Private information"/>
				</f:content>

				<!-- DynamicPage Footer -->
				<f:footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" text="Accept"/>
						<Button type="Reject" text="Reject"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</f:midColumnPages>
	</f:FlexibleColumnLayout>
</mvc:View>

