<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:uitable="sap.ui.table"
    xmlns:uxap="sap.uxap"
    xmlns:unified="sap.ui.unified" controllerName="com.gavdilabs.ui5template.controller.Country"
    xmlns:form="sap.ui.layout.form">
    <uxap:ObjectPageLayout id="CountryDetailPage" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" upperCaseAnchorBar="false" class="sapUiSmallMarginBegin">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:expandedHeading>
                    <HBox>
                        <Title text="Poland" wrapping="true" />
                    </HBox>
                </uxap:expandedHeading>
                <uxap:snappedHeading>
                    <FlexBox fitContainer="true" alignItems="Center">
                        <Title text="Poland" wrapping="true" />
                    </FlexBox>
                </uxap:snappedHeading>
                <uxap:actions>
                    <Button text="Edit processes" icon="sap-icon://edit" press="addNewProcess"/>
                    <Button text="Edit groups" icon="sap-icon://edit" press="editGroup"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>
        <uxap:headerContent>
        <HBox>
<form:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" width="25rem">
            <Label text="Hide groups" />
            <CheckBox selected="false" />               
             </form:SimpleForm>
            </HBox>
            <!--
            <HBox>
                <form:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" width="25rem">
                    <Label text="Here would go" />
                    <Text text="some header content" />
                </form:SimpleForm>
            </HBox>-->
        </uxap:headerContent>
        <uxap:sections>
         <uxap:ObjectPageSection title="LMS">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection showTitle = "true" title="EU" class="sapUiSmallMarginTop">
                        <uxap:blocks>
                            <uitable:Table id="euLMStable" visibleRowCount="4"  selectionMode="None" ariaLabelledBy="title">
                                <uitable:extension>
                                    <OverflowToolbar style="Clear">
                                        <Title text="GDPR Complaince Course"/>
                                    </OverflowToolbar>
                                </uitable:extension>
                                <uitable:columns>
                                    <uitable:Column width="100%">
                                        <Label text="Data entry" />
                                        <uitable:template>
                                            <Text text="{Name}" />
                                        </uitable:template>
                                    </uitable:Column>
                                </uitable:columns>
                            </uitable:Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection showTitle = "true" title="Global">
                        <uxap:blocks>
                           <uitable:Table id="globalLMStable" visibleRowCount="4"  selectionMode="None" ariaLabelledBy="title">
                                <uitable:extension>
                                    <OverflowToolbar style="Clear">
                                        <Title  text="Code of Conduct Course"/>
                                    </OverflowToolbar>
                                </uitable:extension>
                                <uitable:columns>
                                    <uitable:Column width="100%">
                                        <Label text="Data entry" />
                                        <uitable:template>
                                            <Text text="{Name}" />
                                        </uitable:template>
                                    </uitable:Column>
                                </uitable:columns>
                            </uitable:Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection showTitle= "true" title="EC">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection >
                        <uxap:blocks>
                            <uitable:Table id="globalECtable" visibleRowCount="5"  selectionMode="None" ariaLabelledBy="title">
                                <uitable:extension>
                                <Title text="Global" class="titleClass"/>
                                </uitable:extension>
                                <uitable:columns>
                                    <uitable:Column width="100%">
                                        <Label text="Data entry" />
                                        <uitable:template>
                                            <Text text="{Name}" />
                                        </uitable:template>
                                    </uitable:Column>
                                </uitable:columns>
                            </uitable:Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Documents">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection showTitle = "true" title="Country" class="sapUiSmallMarginTop">
                        <uxap:blocks>
                            <uitable:Table id="countryDocumentstable" visibleRowCount="2"  selectionMode="Multi" ariaLabelledBy="title">
                                <uitable:extension>
                                    <OverflowToolbar style="Clear">
                                            <ToolbarSpacer/>
                                            <Button
                                                icon="sap-icon://delete"
                                                tooltip="Add an item"
                                                press="getSelectedIndices"/>
                                            <Button
                                                icon="sap-icon://add"
                                                tooltip="Remove selected"
                                                press="getContextByIndex"/>
                                    </OverflowToolbar>
                                </uitable:extension>
                                <uitable:columns>
                                    <uitable:Column width="100%">
                                        <Label text="Data entry" />
                                        <uitable:template>
                                            <Text text="{Name}" />
                                        </uitable:template>
                                    </uitable:Column>
                                </uitable:columns>
                            </uitable:Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection showTitle = "true" title="Global">
                        <uxap:blocks>
                           <uitable:Table id="globalDocumentstable" visibleRowCount="2"  selectionMode="None" ariaLabelledBy="title">
                                <uitable:extension>
                                    <OverflowToolbar style="Clear">
                                        <Title  text="Code of Conduct Course"/>
                                    </OverflowToolbar>
                                </uitable:extension>
                                <uitable:columns>
                                    <uitable:Column width="100%">
                                        <Label text="Data entry" />
                                        <uitable:template>
                                            <Text text="{Name}" />
                                        </uitable:template>
                                    </uitable:Column>
                                </uitable:columns>
                            </uitable:Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="empty " />
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</core:FragmentDefinition>
