<core:FragmentDefinition xmlns:m="sap.m"
	xmlns="sap.ui.webc.fiori"
	xmlns:core="sap.ui.core" controllerName="com.gavdilabs.ui5template.controller.Country">
	<m:VBox>
		<m:OverflowToolbar class="sapFDynamicPageAlignContent">
			<m:ToolbarSpacer/>
			<m:Input id = "countryListSearch" liveChange=".onEmployeeListSearch" width="20rem">
				</m:Input>
			<m:MenuButton icon="sap-icon://sort" useDefaultActionOnly="true">
				<m:menu>
					<m:Menu itemSelected="onMenuAction">
						<m:MenuItem text="By Name" press=".onSortFirstName"/>
					</m:Menu>
				</m:menu>
			</m:MenuButton>
		</m:OverflowToolbar>
		<m:List id="CountryList" itemPress=".onClickedItem" growing="true">
			<m:StandardListItem title="Denmark" description="Groups: Global, EU" type="Navigation" />
			<m:StandardListItem id="poland" title="Poland" description="Groups: Global, EU"  type="Navigation" selected="true"/>
			<m:StandardListItem title="France" description="Groups: Global, EU" type="Navigation" />
			<m:StandardListItem title="USA"  description="Groups: Global, US Affirmative Action" type="Navigation" />
			<m:StandardListItem title="South Africa" description="Groups: Global"  type="Navigation" />
			<m:StandardListItem title="Sweden" description="Groups: Global, EU"  type="Navigation" />
		</m:List>
	</m:VBox>
</core:FragmentDefinition>