<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controller = "com.gavdilabs.ui5template.controller.Group">
    <Dialog title="Add new group" class="sapUiResponsiveContentPadding">
        <content>
            <Input placeholder="Enter group name"/>
        </content>
        <beginButton>
            <Button text="Add" press="onCloseNewProcess"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseNewProcess" type="Error"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>