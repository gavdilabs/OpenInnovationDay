<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controller = "com.gavdilabs.ui5template.controller.Group">
    <Dialog title="Add process" class="sapUiResponsiveContentPadding">
        <content>
            <ComboBox items="{/Rule}">
                <core:Item text="{name}"/>
            </ComboBox>
        </content>
        <beginButton>
            <Button text="Save" press="onCloseNewProcess"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onCloseNewProcess"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>